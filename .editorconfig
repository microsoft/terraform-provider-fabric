root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

[*.{cmd,bat}]
end_of_line = crlf

[*.md]
indent_size = unset
indent_style = space

[*.py]
indent_style = space

[*.go]
indent_style = tab

[*.{yml,yaml}]
indent_style = space

[*.{json,jsonc}]
indent_style = space

[*.ps1]
indent_style = space

[*.sh]
indent_style = space
