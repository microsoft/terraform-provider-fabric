	}

	itemListGetter := func(ctx context.Context, fabricClient fabric.Client, model fabricitem.DataSourceFabricItemsPropertiesModel[{{.Package}}PropertiesModel, fab{{.Package}}.Properties], fabricItems *[]fabricitem.FabricItemProperties[fab{{.Package}}.Properties]) error {
