// For format details, see https://aka.ms/devcontainer.json
{
  "name": "Terraform Provider",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  // Available base images: https://mcr.microsoft.com/v2/devcontainers/base/tags/list
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu24.04",
  // Features to add to the dev container. More info: https://containers.dev/features
  "features": {
    "ghcr.io/meaningful-ooo/devcontainer-features/fish:2": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.24.3"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13",
      "toolsToInstall": ""
    },
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {},
    "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {
      "jqVersion": "latest",
      "yqVersion": "latest",
      "gojqVersion": "latest",
      "jaqVersion": "latest"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.12.1",
      "installSentinel": true,
      "installTFsec": true,
      "installTerraformDocs": true
    },
    "ghcr.io/robbert229/devcontainer-features/opentofu:1": {
      "version": "1.9.1"
    },
    "ghcr.io/eitsupi/devcontainer-features/go-task:1": {},
    "./features/tfprovider-local-dev": {
      "providerName": "microsoft/fabric",
      "workspace": "${containerWorkspaceFolder}"
    }
  },
  "onCreateCommand": {
    "chown-local": "sudo chown -R $(id -un):$(id -gn) $HOME/.local",
    "setup-tools": "task tools"
  },
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": {
    "git-safe-dir": "git config --global --add safe.directory ${containerWorkspaceFolder}"
  },
  // "privileged": true,
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind,consistency=cached",
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    8000
  ],
  "portsAttributes": {
    "8000": {
      "label": "mkdocs serve",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.defaultProfile.osx": "zsh",
        "powershell.powerShellAdditionalExePaths": {
          "pwsh": "/usr/bin/pwsh"
        },
        "powershell.powerShellDefaultVersion": "pwsh"
      },
      "extensions": [
        "golang.go",
        "foxundermoon.shell-format",
        "redhat.vscode-yaml",
        "ms-vscode.powershell",
        "ms-vscode.azurecli",
        "GitHub.vscode-pull-request-github",
        "GitHub.copilot-chat",
        "GitHub.codespaces",
        "GitHub.remotehub",
        "GitHub.copilot",
        "GitHub.vscode-github-actions",
        "EditorConfig.EditorConfig",
        "eamodio.gitlens",
        "humao.rest-client",
        "DavidAnson.vscode-markdownlint",
        "bierner.github-markdown-preview",
        "darkriszty.markdown-table-prettify",
        "TakumiI.markdowntable",
        "hashicorp.terraform",
        "ms-azuretools.vscode-azure-github-copilot",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "ms-vscode.remote-explorer",
        "ms-vscode.remote-repositories",
        "ms-vscode-remote.remote-ssh-edit",
        "fnando.linter",
        "task.vscode-task",
        "aaron-bond.better-comments",
        "usernamehw.errorlens",
        "MS-SarifVSCode.sarif-viewer",
        "alefragnani.Bookmarks",
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "4ops.terraform"
      ]
    }
  },
  "runArgs": [
    "--env-file",
    ".devcontainer/devcontainer.env"
  ]
}
